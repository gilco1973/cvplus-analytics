{
  "extends": "./tsconfig.json",
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "__tests__"
  ],
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "noEmit": false
  }
}